const minimo = 1
const maximo = 3
const numeroAleatorio = Math.floor(minimo + Math.random() * (maximo - minimo)  )
console.log (numeroAleatorio)

// 1 papel 
// 2 tesoura
// 3 pedra

const minhaEscolha = 3

if(minhaEscolha == numeroAleatorio){
    console.log("Empate")
}
if(numeroAleatorio == 1 && minhaEscolha == 2){
    console.log("Você Ganhou")
}
if(numeroAleatorio == 1 && minhaEscolha == 3){
    console.log("Você Perdeu")
}
if(numeroAleatorio == 2 && minhaEscolha == 1){
    console.log("Você Perdeu")
}
if(numeroAleatorio == 2 && minhaEscolha == 3){
    console.log("Você Ganhou")
}
if(numeroAleatorio == 3 && minhaEscolha == 1){
    console.log("Você Ganhou")
}
if(numeroAleatorio == 3 && minhaEscolha == 2){
    console.log("Você Perdeu")}
